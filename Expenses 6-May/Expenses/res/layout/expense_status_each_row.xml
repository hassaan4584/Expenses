<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/expense_status_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/expense_status_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/expense_status_item_img"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/expense_status_item_img"
        android:text="TextView" />

    <TextView
        android:id="@+id/expense_status_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/expense_status_item"
        android:layout_alignBottom="@+id/expense_status_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:text="TextView" />

</RelativeLayout>
